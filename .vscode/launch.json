      "request": "launch",
      "name": "Debug executable 'nitc'",
      "cargo": {
        "args": [
          "build",
          "--bin=nitc",
          "--package=nitrate"
        ],
        "filter": {
          "name": "nitc",
          "kind": "bin"
        }
      },
      "args": [
        "test.nit"
      ],
      "cwd": "${workspaceFolder}"
    },
